                        <div class="input-group" style="text-align:left">
                            <div class="youtube-iframe">
                                <iframe frameborder="0" width="199" height="150" src="<?=$this->getYoutubeLink($asset->getObject()->getUrl())?>" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                <?php endif; ?>
            <?php endforeach; ?>
        <?php endif; ?>
        <div class="asset-block pull-left text-center">
            <span class="btn btn-success btn-block" name="video"><?=$this->translate('Add video')?></span>
